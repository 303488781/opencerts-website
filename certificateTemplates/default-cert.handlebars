<div class="w-100 cf">
  <div class="fl w-70 pr3">
    <div class="pb3">
      <h2></h2>
      <h2>{{name}}</h2>
    </div>
    <div class="mb3">
      <div>
        <h3>Issued to</h3>
        <table class="w-100">
          <tbody>
            {{#each recipient}}
            <tr>
              <td class="w-20" style="vertical-align: top;">{{@key}}</td>
              <td style="word-break: break-all;">{{this}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div>
        <h3>Issued by</h3>
        <table class="w-100">
          <tbody>
            {{#each issuer}}
            <tr>
              <td class="w-20" style="vertical-align: top;">{{@key}}</td>
              <td style="word-break: break-all;">{{this}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>