<div class="w-100 cf">
    <div class="pb3">
      <h2>{{name}}</h2>
    </div>
    <div class="mb3">
      <div>
        <h3>Issued to</h3>
        <table class="w-100">
          <tbody>
            {{#each recipient}}
            <tr>
              <td class="w-20" style="vertical-align: top;">{{@key}}</td>
              <td style="word-break: break-all;">{{this}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div>
        <h3>Issued by</h3>
        <table class="w-100">
          <tbody>
            {{#each issuer}}
            <tr>
              <td class="w-20" style="vertical-align: top;">{{@key}}</td>
              <td style="word-break: break-all;">{{this}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div>
        <h3>Issued at</h3>
        <div>{{issuedOn}}</div>
      </div>
      <div>
        <h3>Expires on</h3>
        <div>{{expiredOn}}</div>
      </div>
    </div>
  </div>
</div>
<div>
  <h3>Transcript</h3>
</div>
<div>
  <table class="fl tl w-100" cellspacing="0">
    <thead>
      <tr>
        <th style="width: 14%;">Course</th>
        <th class="w-70"></th>
        <th class="w-10">Grade</th>
        <th class="w-10">Credit</th>
      </tr>
    </thead>
    <tbody>
      {{#each transcript}}
      <tr>
        <td>{{this.courseCode}}</td>
        <td>{{this.name}}</td>
        <td>{{this.grade}}</td>
        <td>{{this.courseCredit}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="cb"></div>
</div>
<h3>Details</h3>
<p>
  {{badge.criteria}}
</p>